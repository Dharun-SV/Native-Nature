{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (Server)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "dotnet: build",
      "program": "${workspaceFolder}/NativeNature.Server/bin/Debug/net9.0/NativeNature.Server.dll",
      "cwd": "${workspaceFolder}/NativeNature.Server",
      "stopAtEntry": false,
      "env": { "ASPNETCORE_ENVIRONMENT": "Development" },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
